load("@io_bazel_rules_go//go:def.bzl", "go_library")

go_library(
    name = "go_default_library",
    srcs = [
        "config.go",
        "constants.go",
        "resource.go",
        "types.go",
    ],
    importpath = "github.com/dashjay/baize/pkg/cc",
    visibility = ["//visibility:public"],
